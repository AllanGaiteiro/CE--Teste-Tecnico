                        </label>
                        <div>
                            <input class="form-control-plaintext" type='number' name="limit" readonly='true'
                                value={{this.limit}}>
                        </div>
                    </div>
                    <div>
                        <label for="interest">
                            Interest:
                        </label>
                        <div>
                            <input class="form-control-plaintext" type='text' name="interest" readonly='true'
                                value={{this.interest}}>
                        </div>
                    </div>

                </div>
                <div style="width: 50%;border-left: 1px solid black;padding-left: 40px">
                    <div>
                        <label for="term">
                            Term:
                        </label>
                        <div>
                            <input class="form-control-plaintext" type='number' name="term" readonly='true'
                                value={{this.term}}>
                        </div>
                    </div>
                    <div>
                        <label for="isActive">
                            is Active:
                        </label>
                        <div>
                            <input class="form-control-plaintext" type='txt' name="isActive" readonly='true'
                                value={{this.isActive}}>
                        </div>
                    </div>
                </div>
            </div>
            <div style="text-align: right;padding: 20px">
                <input type="button" class="btn btn-warning btn-xs" id="formEdit_{{this.name}}" value="Editar"
                    onclick="editInfo(this)">


                <a href='#' id="{{this.name}}" class="btn btn-danger btn-xs" onclick="deletarOpt(this)">Delete</a>


            </div>

        </form>
        {{/each}}

    </div>
</div>